<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "org.nyandevid.stellarfaucet"
    versionCode = "2"
    version     = "0.2.0" >

  <name>StellarFaucet: Free Stellar</name>

  <description>
      Claim Stellar Lumen every 4 minute's NyanDev Indonesia
  </description>

  <author href="https://facebook.com/ryan.hac" email="ryandevstudio@gmail.com">
      Ryan Aunur Rassyid
  </author>
  
  <preference name="permissions" value="none"/>
  <preference name='pgb-builder-version' value='2' />
  <preference name="phonegap-version"  value="cli-8.0.0" />
  <preference name="android-build-tool" value="gradle" />
  <!-- Plugins -->
  
  <plugin spec="https://github.com/8zrealestate/android-referrer-plugin#3eb612d" />
  <plugin spec="https://github.com/apla/me.apla.cordova.app-preferences#2f4924e" />
  <plugin name="com.verso.cordova.clipboard" spec="0.1.0" />
  <plugin name="cordova-plugin-admobpro" spec="2.31.6" />
  <plugin name="cordova-plugin-android-imei" spec="1.0.0" />
  <plugin name="cordova-plugin-android-permissions" spec="1.0.0" />
  <plugin name="cordova-plugin-app-version" spec="0.1.9" />
  <plugin name="cordova-plugin-device-accounts" spec="1.0.1" />
  <plugin name="cordova-plugin-google-analytics" spec="1.8.3" />
  <plugin name="cordova-plugin-local-notification" spec="0.9.0-beta.3" />
  <plugin name="cordova-plugin-statusbar" spec="2.4.2" />
  <plugin name="cordova-plugin-uniquedeviceid" spec="1.3.2" />
  <plugin name="cordova-plugin-whitelist" spec="1.3.3" />
  <plugin name="onesignal-cordova-plugin" spec="2.3.3" />

  <access origin="*"/>

  <platform name="android">
      <preference name="android-minSdkVersion" value="19" /> <!-- Kitkat -->

      <icon density="ldpi" src="res/icons/android/ldpi.png"/>
      <icon density="mdpi" src="res/icons/android/mdpi.png"/>
      <icon density="hdpi" src="res/icons/android/hdpi.png"/>
      <icon density="xhdpi" src="res/icons/android/xhdpi.png"/>
      <icon density="xxhdpi" src="res/icons/android/xxhdpi.png"/>
      <icon density="xxxhdpi" src="res/icons/android/xxxhdpi.png"/>
  </platform>

  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="market://*" />

</widget>